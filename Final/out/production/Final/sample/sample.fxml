<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<AnchorPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <Button fx:id="WallNut" text="Tower 1" AnchorPane.rightAnchor="600" AnchorPane.topAnchor="15" onAction="#onWaveButton" style="-fx-background-image: url('background.jpg'); -fx-background-size: 100px; -fx-background-repeat: no-repeat;"/>
    <Button fx:id="Peashooter" text="Tower 2" AnchorPane.rightAnchor="500" AnchorPane.topAnchor="15" onAction="#onWaveButton"/>
    <Button fx:id="Sunflower" text="Tower 3" AnchorPane.rightAnchor="400" AnchorPane.topAnchor="15" onAction="#onWaveButton"/>



    <AnchorPane fx:id="gameView"
                AnchorPane.topAnchor="50" AnchorPane.leftAnchor="5" AnchorPane.rightAnchor="5" AnchorPane.bottomAnchor="20" style="-fx-background-color: #bbb">
        <children>
            <ImageView fx:id="imageView" layoutX="0" layoutY="0" fitHeight="650" fitWidth="1500" preserveRatio="true">
                <image>
                    <Image url='background.jpg' />

                </image>
            </ImageView>
        </children>

    </AnchorPane>

    <Label AnchorPane.leftAnchor="20" AnchorPane.bottomAnchor="0" style="-fx-font-size: 100%"
           text="Left: A or left-arrow; Right: D or right-arrow" />

</AnchorPane>